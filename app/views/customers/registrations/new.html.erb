<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    <span>(姓)</span>
    <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
    <span>(名)</span>
    <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    <span>(セイ)</span>
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
    <span>(メイ)</span>
    <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true, placeholder: "0000000000" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(6以上)" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :確認用 %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h6>既に登録済みの方</h6>
<%= link_to  "こちら", new_customer_session_path  %>からログインしてください。
