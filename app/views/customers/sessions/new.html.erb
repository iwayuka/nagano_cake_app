<!-- 会員ログイン画面 -->
<div class="container">
  <div class="my-5 row">
    <div class="col-lg-4 d-flex justify-content-center" style="background-color: secondarys" >
      <h4 class="px-3 mb-3 bg-secondary text-white">ログイン</h4>
    </div>
  </div>

  <div class="mb-4 row">
    <div class="ml-5 col-lg-1"></div>
    <div class="col-lg-3">
      <h6 class="bg-secondary text-white d-flex justify-content-center">会員の方はこちらからログイン</h6>
    </div>
  </div>

  <!-- フォーム -->
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <!-- メールアドレスを入力してログイン -->
    <div class="form-group row">
      <div class="col-lg-2"></div>
      <%= f.label :メールアドレス, class:"col-lg-2 col-form-label" %>
      <div class="col-lg-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"form-control" %>
      </div>
      <div class="col-lg-2"></div>
    </div>
    <!-- 以上-->

    <!-- パスワードを入力してログイン -->
    <div class="form-group row">
      <div class="col-lg-2"></div>
      <%= f.label :パスワード, class:"col-lg-2 col-form-label" %>
      <div class="col-lg-5">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
      </div>
      <div class="col-lg-2"></div>
    </div>
    <!-- 以上-->

    <!-- 「ログイン」ボタン -->
    <div class="actions row">
      <div class="col-lg-4"></div>
      <div class="mt-3 col-lg-2">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      </div>
    </div>
    <!-- 以上 -->

  <% end %>
  <!-- 以上 -->

  <div class="row">
    <div class="ml-5 col-lg-1"></div>
    <div class="mt-5 mb-3 pr-5 col-lg-3">
      <h6 class="bg-secondary text-white d-flex justify-content-center">会員登録がお済みでない方</h6>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-5">
     <%= link_to "こちら", new_customer_registration_path %>　から新規登録してください。
    </div>
  </div>
</div>
<!-- 以上 -->
