<h1>商品編集</h1>
<%= form_with model:@item, url:"/admin/#{@item.id}", local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name, placeholder: "商品名" %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
  <h4>ジャンル</h4>
  <!--Genresのデータベースからカラムを引っ張って、プルダウンを実装するためのコード -->
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --" %>
  <h4>税抜価格</h4>
  <%= f.text_field :price, placeholder: "1000" %><p>円</p>
  <h4>販売ステータス</h4>
  <%= f.label :is_active, '販売中', value: 1 %>
  <%= f.radio_button :is_active, '1' %>
  <%= f.label :is_active, '販売停止中', value: 0 %>
  <%= f.radio_button :is_active, '0' %>
  <%= f.submit '変更を保存' %>
<% end %>