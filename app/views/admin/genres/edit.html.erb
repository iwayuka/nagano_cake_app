<div class="container">
  <div class="mb-3 row">
    <div class="col-lg-4 d-flex justify-content-center" style="background-color: secondarys" >
      <h4 class="px-3 my-3 bg-secondary text-white" >ジャンル編集</h4>
    </div>
  </div>

  <!-- ジャンル編集のためのform_withを記述 -->
  <%= form_with model:@genre, url:"/admin/genres/#{@genre.id}", local:true do |f| %>
  <div class="mb-3 row">
    <div class="col form-inline" >
      <div class="mx-4 form-group">
        <p></p><strong><%= f.label :ジャンル名%></strong></p>
      </div>
      <div class="mx-4 form-groupc">
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit '変更の保存', class: "px-4 py-2 mx-4 btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
  <!-- 以上 -->

</div>
