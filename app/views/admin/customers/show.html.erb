<div class="container">
  <div class="mb-3 row">
    <div class="col-lg-4 d-flex justify-content-center" style="background-color: secondarys" >
      <h4 class="px-3 my-3 bg-secondary text-white"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-lg-10">
      <table class="table table-borderless">
        <tr>
          <td scope="col" style="width: 20%">会員ID</td>
          <td scope="col" style="width: 80%"><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><%= @customer.is_deleted ? '退会':'有効' %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-lg-2"></div>
    <div class="col-lg-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"px-3 py-2 btn btn-success" %>
    </div>
    <div class="col-lg-3">
      <%= link_to "注文履歴一覧を見る", admin_customers_path, class:"px-2 py-2 btn btn-primary" %>
    </div>
  </div>
</div>
