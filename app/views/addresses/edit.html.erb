<!-- 配送先編集画面 -->
<div class="container">
  <div class="my-3 row">
    <div class="col-lg-4 d-flex justify-content-center" style="background-color: secondarys" >
      <h4 class="px-3 mb-3 bg-secondary text-white">配送先編集</h4>
    </div>
  </div>
  <!-- ジャンル編集のためのform_withを記述 -->
  <%= form_with model:@address, url:"/addresses/#{@address.id}", local:true do |f| %>

  <!-- 郵便番号（ハイフンなし）を入力するフォーム -->
  <div class="form-group row">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class:"col-lg-3 col-form-label" %>
    <div class="col-lg-3">
      <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class:"form-control" %>
    </div>
  </div>
  <!-- 以上-->

  <!-- 住所を入力するフォーム -->
  <div class="form-group row">
    <%= f.label :address, "住所", class:"col-lg-3 col-form-label" %>
    <div class="col-lg-6">
      <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class:"form-control" %>
    </div>
  </div>
  <!-- 以上-->

  <!-- 郵便番号（ハイフンなし）を入力するフォーム -->
  <div class="form-group row">
    <%= f.label :name, "宛名", class:"col-lg-3 col-form-label" %>
    <div class="col-lg-3">
      <%= f.text_field :name, autofocus: true, placeholder: "令和道子", class:"form-control" %>
    </div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3">
      <%= f.submit '編集内容を保存', class: "px-5 py-7 btn btn-success"  %>
    </div>
  </div>
  <% end %>
  <!-- 以上-->
</div>
