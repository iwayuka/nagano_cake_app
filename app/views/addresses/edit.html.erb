<div class="container">
  <div class="mb-3 row">
    <div class="col-lg-4 d-flex justify-content-center" style="background-color: secondarys" >
      <h4 class="px-3 my-3 bg-secondary text-white" >配送先編集</h4>
    </div>
  </div>

  <!-- ジャンル編集のためのform_withを記述 -->
  <%= form_with model:@address, url:"/addresses/#{@address.id}", local:true do |f| %>
  <div class="mb-3 row d-flex justify-content-center">
    <div class="col-lg-2">
      <%= f.label :'郵便番号(ハイフンなし)' %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :postal_code, placeholder: "test", class:"form-control" %>
    </div>
    <div class="col-lg-2">
      <%= f.label :住所 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :address, placeholder: "test", class:"form-control" %>
    </div>
    <div class="col-lg-2">
      <%= f.label :宛名 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :name, placeholder: "test", class:"form-control" %>
    </div>
  </div>
      <div class="form-group">
        <%= f.submit '変更内容の保存', class: "px-4 py-2 mx-4 btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
  <!-- 以上 -->

</div>
